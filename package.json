{
  "name": "storefront_backend",
  "version": "0.1.3",
  "description": "API backend with various endpoints for simple storefront",
  "main": "server.ts",
  "scripts": {
    "start": "node src/server.ts",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess 'node ./dist/server.js'",
    "watch-test": "ENV=test tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess 'node ./dist/server.js'",
    "build": "npx tsc",
    "test": "npm run build && ENV=test jasmine",
    "tsc": "tsc",
    "create-test": "npm run build && npm run create-test-up && ENV=test jasmine && npm run create-test-down",
    "create-test-up": "db-migrate up:setup && db-migrate --env test up && db-migrate --env test up:test",
    "create-test-down": "db-migrate --env test down:test && db-migrate -c 4 --env test down && db-migrate down:setup",
    "create-test-reset": "db-migrate --env test reset:test && db-migrate --env test reset && db-migrate reset:setup",
    "db-create-up": "db-migrate up",
    "db-create-down": "db-migrate -c 4 down"
  },
  "author": "TSmith",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "db-migrate": "^0.11.12",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "pgtools": "^0.3.2",
    "supertest": "^6.1.6",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/jasmine": "^3.6.3",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^14.14.6",
    "@types/pg": "^7.14.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jasmine": "^4.1.2",
    "eslint-plugin-prettier": "^3.4.0",
    "jasmine": "^3.7.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.3.0",
    "prettier": "^1.19.1",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9"
  }
}
